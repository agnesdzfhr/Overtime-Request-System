
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";

}
<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div id="loginCard" class="card o-hidden border-0 shadow-lg h-auto">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block">
                        <img id="loginImg" src="~/img/undraw_login_re_4vu2.svg" />
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h3 class=" mb-4 font-weight-bold ">Overtime Request System</h3>
                                <p class="text-gray-900 mb-4">Sign in to continue.</p>
                            </div>
                            <form id="accountLogin" action="Login/Auth" method="post" class="user">
                                @if (TempData["message"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible show fade">
                                        <div class="alert-body">
                                            <button class="close" data-dismiss="alert">
                                                <span>×</span>
                                            </button>
                                            @TempData["message"]
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control form-control-user"
                                           id="emailEmployee" aria-describedby="emailHelp"
                                           placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-user"
                                           id="passwordEmployee" placeholder="Password">
                                </div>
                                <button id="btnLogin" type="submit" class="btn btn-primary btn-user btn-block shadow" tabindex="4">
                                    Login
                                </button>
                            </form>
                            <div class="text-center">
                                <a href="Login/ForgotPassword" class="small">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
