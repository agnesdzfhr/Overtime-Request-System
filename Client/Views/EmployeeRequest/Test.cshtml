@{
    ViewData["Title"] = "Employee Request";
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-header d-flex justify-content-center shadow">
        <h1>Employee Request</h1>
    </div>
    <div class="section-body">
        <h4>Notification</h4>
        <div class="card shadow" data-toggle="modal" data-target="#detailModalRequest" style="cursor: pointer;width: auto; height: auto;">
            <div class="card-body">
                <li class="media">
                    <img alt="image" class="mr-3 rounded-circle" width="50" src="~/lib/assets/img/avatar/avatar-1.png">
                    <div class="media-body">
                        <div id="requesterName" class="mt-0 mb-1 font-weight-bold">Agnes Fahira</div>
                        <div class="text-small font-600-bold">has been request for Overtime Schedule. Click this for more information.</div>
                    </div>
                </li>
            </div>
        </div>
        <div class="card shadow" data-toggle="modal" data-target="#detailModalRequest" style="cursor: pointer;width: auto; height: auto;">
            <div class="card-body">
                <li class="media">
                    <img alt="image" class="mr-3 rounded-circle" width="50" src="~/lib/assets/img/avatar/avatar-1.png">
                    <div class="media-body">
                        <div id="requesterName" class="mt-0 mb-1 font-weight-bold">Agnes Fahira</div>
                        <div class="text-small font-600-bold">has been request for Overtime Schedule. Click this for more information.</div>
                    </div>
                </li>
            </div>
        </div>
    </div>

</section>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="detailModalRequest">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Detail Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="nik">NIK: </label>
                            <input type="text" class="form-control" id="nikModal" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="fullname">Fullname: </label>
                            <input type="text" class="form-control" id="fullNameModal" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="date">Date: </label>
                            <input type="date" class="form-control" id="dateModal" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="startTime">Start Time: </label>
                            <input type="time" class="form-control" id="startTimeModal" readonly>
                        </div>
                        <div class="col-md mb-3">
                            <label for="endTime">End Time: </label>
                            <input type="time" class="form-control" id="endTimeModal" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="note">Note Job: </label>
                            <textarea type="text" class="form-control" id="note" value="Test" readonly></textarea>
                        </div>
                    </div>
                    <div class="d-inline-block mt-3">
                        <button class="btn btn-success ml-2" type="submit" onclick="acceptRequest()"> Accept</button>
                        <button class="btn btn-danger ml-2" type="submit" onclick="rejectRequest()"> Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/js/site.js" asp-append-version="true"></script>
}
